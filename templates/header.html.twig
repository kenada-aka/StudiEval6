    <div class="container d-flex align-items-center justify-content-between">
         <!-- Logo -->
            <a href="/">
                <img src="/assets/img/logo.png" width="128" />
            </a>
        <!-- Barre de navigation -->
        <nav id="navbar" class="navbar">
            <ul>
                {% if not app.user %}
                    <li><a class="nav-link scrollto" href="/">Accueil</a></li>
                {% endif %}
                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a class="nav-link scrollto" href="{{ path('admin.gestion.admin') }}">Gestion Admin</a></li>
                        <li><a class="nav-link scrollto" href="{{ path('admin.gestion.contact') }}">Gestion Contact</a></li>
