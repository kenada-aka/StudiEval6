{% extends "index.html.twig" %}

{% block body %}

<main id="main">
    <section class="section">
        <div class="container mt-4">
            {% if is_granted('ROLE_ADMIN') %}
                <div class="d-flex justify-content-center">
                    <a href="{{ path('admin.add', {formName: formName}) }}" class="btn btn-primary mt-4">Ajouter un enregistrement</a>
                </div>
                {% if datas is defined %}
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                {% for header in headers %}
                                    <th>{{ header }}</th>
                                {% endfor %}
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for data in datas %}
                                <tr>
                                    {% for property in properties %}
                                        <td>{{ attribute(data, property)}}</td>
                                    {% endfor %}
                                    <td>
                                        <a href="{{ path('admin.home', {id: data.id}) }}">Editer</a>
                                        <form method="POST" action="{{ path('admin.home', {id: data.id}) }}">
                                            <input type="hidden" name="_method" value="DELETE"/>
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ data.id)}}"/>
                                            <button>Supprimer</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="alert alert-warning mt-4 text-center">Il n'y a pas d'enregistrement dans : <strong>{{ title }}</strong>.</div>
                {% endif %}
            {% endif %}
        </div>
    </section>
</main>

{% endblock %}